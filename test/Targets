tester = PythonTarget(
  sources=[ "src/distrotester",
            "src/remotetest",
            "src/testdistrib"],
  requiredTargets=[ "python/Common",
                    "projects/HadoopDist/installer" ],
  dataPaths = [ "profiles",
                "hadoop-configs",
                "pig-tests",
                "hive-tests" ])

release = PythonRedistTarget(
  distribName     = "distrotest",
  requiredTargets = [ ":tester" ])

defaultTarget(release)

