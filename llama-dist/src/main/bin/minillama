# resolve links - $0 may be a softlink
PRG="${0}"

while [ -h "${PRG}" ]; do
  ls=`ls -ld "${PRG}"`
  link=`expr "$ls" : '.*-> \(.*\)$'`
  if expr "$link" : '/.*' > /dev/null; then
    PRG="$link"
  else
    PRG=`dirname "${PRG}"`/"$link"
  fi
done

BASEDIR=`dirname ${PRG}`
BASEDIR=`cd ${BASEDIR}/..;pwd`

for i in $*
do
  case $i in
  --hadoop-conf=*)
    hadoopconf=${i#*=}
    ;;
  --hadoop-nodes=*)
    hadoopnodes=${i#*=}
    ;;
  --verbose)
    verbose=true
    ;;
  *)
    echo "Invalid option"
    echo
    printUsage
    exit 1
    ;;
  esac
done
if [[ "${hadoopconf}" == "" || "${hadoopnodes}" == "" ]] ; then
  echo "Both --hadoop-conf and --hadoop-nodes options must be specified"
  echo
  echo "Usage: minillama <OPTIONS>"
  echo "                 --hadoop-conf=<HADOOP_CONF_DIR>"
  echo "                 --hadoop-nodes=<CLUSTER_SIZE>"
  echo "                 [--verbose]"
  echo
  exit 1
fi

CLASSPATH="${hadoopconf}:${BASEDIR}/conf"
for i in "${BASEDIR}/lib/"*.jar; do
  CLASSPATH="${CLASSPATH}:$i"
done

if test -z ${JAVA_HOME}
then
    JAVA_BIN=java
else
    JAVA_BIN=${JAVA_HOME}/bin/java
fi

if [ "${verbose}" = "true" ];
then
  echo "JAVA                      : `which java`"
  echo "MINI_LLAMA_OPTS           : ${MINI_LLAMA_OPTS}"
  echo "CLASSPATH                 : ${CLASSPATH}"
fi

${JAVA_BIN} ${MINI_LLAMA_OPTS} -cp ${CLASSPATH} \
  com.cloudera.llama.am.server.MiniLlama ${hadoopnodes}
